<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/tiktok"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/tiktok_round"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.94"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/short4"
       app:layout_constraintVertical_bias="0.22000003" />

   <ImageView
       android:id="@+id/facebook"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/facebook_round"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.04"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/short4"
       app:layout_constraintVertical_bias="0.22000003" />

   <ImageView
       android:id="@+id/youtube"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/youtube_round"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/short4"
       app:layout_constraintVertical_bias="0.22000003" />


   <EditText
       android:id="@+id/urlbar"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:hint="Write your search query..."
       android:textColorHint="#212121"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/imageView"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.01999998" />

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/icon_round"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/search"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:backgroundTint="#80B4B4"
       android:text="Search"
       android:textColor="@color/black"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/urlbar"
       app:layout_constraintVertical_bias="0.04000002" />

   <Button
       android:id="@+id/multi"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#80B4B4"
       android:text="Open doubleview"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.01999998" />



   <Button
       android:id="@+id/short1"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#FD9FBC"
       android:text="Here will be your favorite pages"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.13" />

   <Button
       android:id="@+id/short2"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#FD9FBC"
       android:text="Here will be your favorite pages"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.24000001" />

   <Button
       android:id="@+id/short3"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#FD9FBC"
       android:text="Here will be your favorite pages"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.36" />

   <Button
       android:id="@+id/short4"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#FD9FBC"
       android:text="Here will be your favorite pages"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.47000003" />

   <Button
       android:id="@+id/settings"
       android:textColor="@color/black"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="#B4B080"
       android:gravity="left"
       android:text="Settings"
       android:textAppearance="@style/TextAppearance.AppCompat.Display1"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/search"
       app:layout_constraintVertical_bias="0.876" />


</androidx.constraintlayout.widget.ConstraintLayout>